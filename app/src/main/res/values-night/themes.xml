<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tint</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- windows animation. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppAlertDialog" parent="@style/Theme.Material3.Dark.Dialog.Alert">
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonTint">@color/axe</item>
        <item name="buttonBarNegativeButtonStyle">@style/ADButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/ADButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/ADButtonStyle</item>
    </style>

    <style name="ADButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/axe</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Dialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:textColorPrimary">?colorOnPrimary</item>
        <item name="android:textColorSecondary">?colorOnPrimary</item>
        <item name="actionMenuTextColor">?colorOnPrimary</item>
    </style>

</resources>