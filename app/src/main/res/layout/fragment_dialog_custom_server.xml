<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:text="Server Configuration"/>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_weight="1"
                   android:id="@+id/til_address"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Server Address">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/et_address"
                       android:maxLines="1"
                       android:inputType="text"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_marginStart="3dp"
                   android:layout_weight="1"
                   android:id="@+id/til_openssh"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="180dp"
                   android:layout_height="wrap_content"
                   android:hint="Open SSH">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/et_openssh"
                       android:maxLines="1"
                       android:inputType="number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

               </com.google.android.material.textfield.TextInputLayout>

           </LinearLayout>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_weight="1"
                   android:id="@+id/til_dropbear"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Dropbear">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/et_dropbear"
                       android:maxLines="1"
                       android:inputType="number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_marginStart="3dp"
                   android:layout_weight="1"
                   android:id="@+id/til_stunnel"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Stunnel">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/et_stunnel"
                       android:maxLines="1"
                       android:inputType="number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

               </com.google.android.material.textfield.TextInputLayout>

           </LinearLayout>

           <TextView
               android:layout_marginTop="10dp"
               android:layout_marginBottom="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:text="DNSTT Configuration"/>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/til_pub_key"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Public Key">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/et_pub_key"
                   android:maxLines="1"
                   android:inputType="text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

           </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/til_name_server"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Name Server">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/et_name_server"
                   android:maxLines="1"
                   android:inputType="text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />

           </com.google.android.material.textfield.TextInputLayout>

           <TextView
               android:layout_marginTop="10dp"
               android:layout_marginBottom="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:text="Proxy Configuration"/>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_weight="1"
                   android:id="@+id/til_proxy_address"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textStyle="bold"
                   android:hint="Proxy Address">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/et_proxy_address"
                       android:maxLines="1"
                       android:inputType="text"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_marginStart="5dp"
                   android:layout_weight="1"
                   android:id="@+id/til_proxy_port"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="180dp"
                   android:layout_height="wrap_content"
                   android:hint="Port">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/et_proxy_port"
                       android:maxLines="1"
                       android:inputType="number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

               </com.google.android.material.textfield.TextInputLayout>

           </LinearLayout>


           <TextView
               android:layout_marginTop="10dp"
               android:layout_marginBottom="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:text="Authentication"/>

           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_weight="1"
                   android:id="@+id/til_auth_username"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Username">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/et_auth_username"
                       android:maxLines="1"
                       android:inputType="text"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

               </com.google.android.material.textfield.TextInputLayout>

               <com.google.android.material.textfield.TextInputLayout
                   android:layout_marginStart="5dp"
                   android:layout_weight="1"
                   android:id="@+id/til_auth_password"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Password">

                   <com.google.android.material.textfield.TextInputEditText
                       android:id="@+id/et_auth_password"
                       android:maxLines="1"
                       android:inputType="text"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />

               </com.google.android.material.textfield.TextInputLayout>

           </LinearLayout>

       </LinearLayout>

   </androidx.core.widget.NestedScrollView>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:measureWithLargestChild="true" >

        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:text="CANCEL" />

        <Button
            android:id="@+id/btn_save"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:text="SAVE" />
    </LinearLayout>

</LinearLayout>